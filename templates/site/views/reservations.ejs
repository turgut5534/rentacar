<%- include('../partials/head' , { title: 'Reservations' }) %>
<%- include('../partials/header') %>

<style>
    .navbar{
        background-color: black !important;
        top:0 !important
    }
</style>

<section style="margin-top: 100px;">
    <div class="container">
		<div class="main-body">
			<div class="row">
				<%- include('../partials/profile-sidebar') %>
				<div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Car Reservations</h5>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Car</th>
                                        <th>Date</th>
                                        <th>Duration</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (const reservation of customer.rentals) { %>
                                    <tr>
                                        <td><%= reservation.car %></td>
                                        <td><%= reservation.date %></td>
                                        <td><%= reservation.duration %></td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
			</div>
		</div>
	</div>
</section>

<%- include('../partials/footer') %>